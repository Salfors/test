function Linux_Mint() {
	case $TODO in 
		"1")
			sudo mv /etc/apt/preferences.d/nosnap.pref ~/Documents/nosnap.backup 
			sudo apt update 
			sudo apt install snapd ;;

		"2")
			flapak_note= echo -e "\n${SM} your distribution might be out of date and need an upgrade ${EM}\n" ;;

		"3")
			sudo mv /etc/apt/preferences.d/nosnap.pref ~/Documents/nosnap.backup 
			sudo apt update 
			sudo apt install snapd
			flapak_note= echo -e "\n${SM} your distribution might be out of date and need an upgrade ${EM}\n" ;;
	esac
}