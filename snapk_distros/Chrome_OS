function Chrome_OS() {
	
	case $TODO in 
		"1")
			function ChromeOS_snap() { 

				snap_note= echo -e "\n${SM} Snap does not support your distro ${EM}\n" 

			}
			ChromeOS_snap ;;

		"2")
			function ChromeOS_Flatpak() { 

				sudo apt-get install flatpak 
				sudo apt install gnome-software-plugin-flatpak 
			}
			ChromeOS_Flatpak ;;

		"3")
			ChromeOS_snap
			ChromeOS_Flatpak ;;
	esac 
}